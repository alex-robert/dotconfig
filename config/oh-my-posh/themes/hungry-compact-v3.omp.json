{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

  "palette": {
          "lavender": "#B7BDF8",
          "blue":  "#8AADF4",
          "wight": "#a6a4a6",
          "text": "#272727",
          "green": "#6CA35E"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "alias": "TwoDepthPath",
          "options": {
            "folder_icon": "\uf115",
            "folder_separator_icon": "/",
            "home_icon": "\uedc5",
            "max_depth": 3,
            "hide_root_location":true,
            "style": "agnoster"
          },
          "template": " {{ .Path }} ",
          "background": "p:blue",
          "foreground": "p:text",

          "powerline_symbol": "\ue0b0",

          "style": "powerline"
        },
        {
          "type": "node",
          "template": "<transparent> \ue718 {{ .Major }}.{{ .Minor }} ",
          "background": "p:green",
          "foreground": "p:text",
          "powerline_symbol": "\ue0b0",
          "style": "powerline"
        },
        {
          "type": "git",
          "options": {
            "branch_gone_icon": "\ueab8",
            "branch_icon": "\uf418 ",
            "branch_identical_icon": "\uf444",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "trailing_diamond": "\ue0b0",
          "template": " {{ .HEAD }} {{if .BranchStatus }} {{ .BranchStatus }}{{ end }} ",
          "foreground": "#43CCEA",
          "background": "p:text",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#6CA35E{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#43CCEA{{ end }}",
            "{{ if gt .Behind 0 }}#FF9248{{ end }}"
          ]
        },
        {
          "options":{
            "cache_duration": "none"
          },
          "type": "text",
          "style": "powerline",
          "leading_diamond": "\u256d\u2500\ue0b2",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Env.POSH_VI_MODE }} {{ .Env.POSH_VI_MODE }} {{ end }}"
        }

      ],
      "newline": true
    }

  ],
  "version": 4,
  "final_space": true
}
