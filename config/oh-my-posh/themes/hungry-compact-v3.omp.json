
{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "lavender": "#B7BDF8",
    "purple": "#C678DD",
    "blue":  "#8AADF4",
    "wight": "#a6a4a6",
    "dark": "#272727",
    "green": "#6CA35E",
    "light_green": "#76b367",
    "yellow": "#F1FA8C"

  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:lavender",
          "options": {
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "[{{ .Path }}]",
          "type": "path"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:purple",
          "template": "[{{.HEAD }}{{if .BranchStatus }} {{.BranchStatus}}{{end}}]",
          "options": {
            "branch_gone_icon": "\ueab8",
            "branch_icon": "\uf418 ",
            "branch_identical_icon": "\uf444",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:light_green",
          "template": "[\ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{.Major}}.{{.Minor}}] "
        },
        {
          "type": "executiontime",
          "alias": "ExecutionTime",
          "options": {
            "always_enabled": false,
            "style": "roundrock",
            "threshold": 300
          },
          "template": "[\udb81\udd1b {{ .FormattedMs }}]",
          "foreground": "p:yellow",
          "style": "plain"
        },
        {
          "type": "claude",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#FFFFFF",
          "background": "#FF6B35",
          "template": " 󰯉 {{ .Model.DisplayName }}  {{ .TokenUsagePercent.Gauge }} "
        }
      ]
    },
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "template": "\u279c ",
          "foreground": "p:wight"
        }
      ]
    }
  ]
}
