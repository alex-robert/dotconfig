{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#6CA35E",
          "properties": {
            "macos": "\uea85"
          },
          "template": "{{.Icon}}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#a6a4a6",
          "properties": {
            "style": "folder",
            "home_icon": "~",
            "max_depth": 2,
            "folder_separator_icon": "/"
          },
          "template": " {{ .Path }}"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#43CCEA",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "properties": {
            "branch_max_length": 20,
            "fetch_stash_count": false,
            "fetch_status": true,
            "fetch_upstream_icon": false,
            "branch_icon": " "
          },
          "template": " {{ .HEAD }}{{ if .Working.Changed }}*{{ end }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "foreground": "#6CA35E",
          "template": "\ue718 {{ .Major }}.{{ .Minor }} "
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#ffff66",
          "properties": {
            "style": "austin",
            "threshold": 500,
            "always_enabled": false
          },
          "template": "\uf252 {{ .FormattedMs }}"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#6CA35E",
          "template": "{{ if .Root }}# {{else}}\ue602 {{end}}"
        }
      ],
      "type": "prompt"
    }
  ]
}
